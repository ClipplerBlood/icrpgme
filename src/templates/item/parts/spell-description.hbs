<section class="tab {{tab.cssClass}} item-description" data-tab="description" data-group="primary">
  {{#if editable}}

    <textarea name="system.description"
              autosize
              spellcheck="false"
              class="description-text"
              placeholder="{{localize "Description"}}">{{system.description}}</textarea>

    <div class="flexrow tt-u">
      <b>{{localize "ICRPG.spell.target"}}:</b>
      <input type="text"
             name="system.target"
             value="{{system.target}}"
             placeholder="{{localize "ICRPG.spell.target"}}">
    </div>

    <div class="flexrow tt-u">
      <b>{{localize "ICRPG.spell.duration"}}:</b>
      <input type="text" name="system.duration" value="{{system.duration}}"
             placeholder="{{localize "ICRPG.spell.duration"}}">
    </div>

    <textarea class="ff-content fs-16"
              placeholder="{{localize "ICRPG.spell.flavorText"}}"
              spellcheck="false"
              autosize
              name="system.flavorText">{{system.flavorText}}</textarea>

    <div class="flexrow">
      <b class="tt-u ff-content fs-16">{{localize "ICRPG.spell.type"}}:</b>
      <input type="text"
             name="system.spellType"
             value="{{system.spellType}}"
             placeholder="{{localize "ICRPG.spell.type"}}">
    </div>

    <div class="flexrow">
      <b class="tt-u">{{localize "ICRPG.spell.level"}}:</b>
      <input type="number"
             name="system.spellLevel"
             value="{{system.spellLevel}}" min="0"
             placeholder="{{localize "ICRPG.spell.level"}}">
    </div>

  {{else}}
    <div class="description-text">{{system.description}}</div>
    {{#if system.target}}
      <div class="tt-u mt-12"><b>{{localize "ICRPG.spell.target"}}: {{system.target}}</b></div>
    {{/if}}
    {{#if system.duration}}
      <div class="tt-u"><b>{{localize "ICRPG.spell.duration"}}: {{system.duration}}</b></div>
    {{/if}}
    {{#if system.flavorText}}
      <div class="mt-12"><i>{{system.flavorText}}</i></div>
    {{/if}}

  {{/if}}
</section>
